<section>
	<div class="container">
		<div class="row">
			<% @movies.each do |movie| %>
				<div class="col-lg-4 movie_style">
					<div>
						<%= link_to image_tag(movie.movie_image.to_s), movie_path(movie.id) %>
					</div>
					<h4 class="movie_name">
						<%= movie.name %>
					</h4>
					<p class="movie_discription">
						<%= movie.discription %>
					</p>
					<div class="row">
					  <div class="small-2 large-4 columns stars_position">
					    <% if current_user %>
					      Rate: <%= rating_for movie, "original_score", disable_after_rate: true %>
					      <%= form_with(url: "/watchlists", method: "post") do %>
					      <%= hidden_field_tag 'movie_id', movie.id %>
					        <%= submit_tag('Add to watchlists') %>
					      <% end %>
					      <br>
					    <% end %>
					  </div>
					</div>
				</div>
			<% end %>
		</div>		
	</div>

</section>
